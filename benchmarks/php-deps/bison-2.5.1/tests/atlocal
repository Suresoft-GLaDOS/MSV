CONF_JAVAC='javac -target 1.1 -source 1.3'

# Empty if no Java VM was found
CONF_JAVA='java'

# Empty if no xsltproc was found
: ${XSLTPROC='/usr/bin/xsltproc'}

# We need egrep.
: ${EGREP='/bin/grep -E'}

